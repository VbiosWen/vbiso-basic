<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.vbiso.dao.CategoryDao">
  <resultMap id="categoryResult" type="categoryDo">
    <id column="category_id" property="categoryId" javaType="long"/>
    <result column="user_id" property="userId" javaType="long"/>
    <result column="category_desc" property="categoryDesc" javaType="String"/>
  </resultMap>

  <sql id="categoryColumn">
    category_id,
    user_id,
    category_desc
  </sql>

  <select id="selectCategoryList" parameterType="long" resultMap="categoryResult">
    SELECT
    <include refid="categoryColumn"/>
    FROM category
    WHERE user_id=#{userId}
  </select>

  <select id="getByCategoryId" parameterType="long" resultMap="categoryResult">
    SELECT
    <include refid="categoryColumn"/>
    FROM category
    WHERE category_id=#{categoryId}
  </select>

  <insert id="insertCategory" parameterType="categoryDo">
    INSERT INTO category
    (category_id, category_desc, user_id)
    VALUES (#{categoryId},#{categoryDesc},#{userId})
  </insert>

  <update id="updateCategory" parameterType="java.util.List">
    UPDATE category
    SET
    <foreach collection="list" item="fieldDo" index="index">
      ${fieldDo.key}=#{fieldDo.value}
    </foreach>
    WHERE
    user_id=#{userId}
  </update>

  <delete id="deleteCategory" parameterType="long">
    DELETE
    <include refid="categoryColumn"/>
    FROM category
    WHERE category_id=#{categoryId} AND user_id=#{userId}
  </delete>

</mapper>